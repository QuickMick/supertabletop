html
    head
        title Login
        link(rel='stylesheet', href='/stylesheets/login.css')
    body
        div.container
            h1.login-title Sign in to our Passport app
            div.content
                img.profile-img(src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120')
                form.form-signin(action='/login', method='POST')
                    input.form-control(type='text', name='username', placeholder='Email',required, autofocus)
                    input.form-control(type='password', name='password', placeholder='Password', required)
                    button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
                if(message && message.length >0)
                    #message
                        div.error-message #{message}
                a.new-account(href='/') continue without login
            a.new-account(href='/signup') Create an account

